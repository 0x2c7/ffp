<div class="container">
  <div class="d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'text-center col-md-6'}) do |f| %>
      <h1 class="h3 font-weight-light" style="margin: 30px 0px;">Sign up</h1>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address' %>

      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password', style: 'margin-top: 7px;' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm Password', style: 'margin-top: 7px;' %>

      <% if f.object.errors.any? %>
        <div class="card border-danger" style="margin-top: 15px">
          <div class="card-body text-danger text-left">
            <% f.object.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="actions" style="margin-top: 15px">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
