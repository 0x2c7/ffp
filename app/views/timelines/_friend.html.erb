<% friendship = Friendship.find_by(user_id: current_user.id, friend_id: friend.id) %>
<div class="card" style="margin: 15px 0px;">
  <div class="card-body d-flex justify-content-between">
    <div class="info">
      <img style="height: 32px; width: 32px; background-color: #fafafa; border-radius: 100%; margin-right: 10px;" src="<%= friend.avatar.attached? ? url_for(friend.avatar) : "" %>"/>
      <%= link_to friend.email, timeline_path(friend) %>
    </div>
    <% unless friendship.present? %>
        <%= link_to 'Add friend', add_friend_timeline_path(friend), method: :put, class: 'btn btn-info', style: "color: #fff;" %>
    <% end %>
  </div>
</div>
