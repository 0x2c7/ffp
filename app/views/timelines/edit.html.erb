<div class="container">
  <div class="d-flex justify-content-center">
    <%= form_for(@user,url: timeline_path(@user), method: :put, html: {class: 'text-center col-md-6', style: 'margin-top: 30px;'}) do |f| %>
      <div class="form-group text-left">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>
      <div class="form-group text-left">
        <%= f.label :cover %>
        <%= f.file_field :cover, class: 'form-control' %>
      </div>

      <div class="actions" style="margin-top: 15px">
        <%= f.submit "Update", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
